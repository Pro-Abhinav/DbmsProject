<%- include("../partials/header"); -%>

<script src="/jsFiles/cities.js"></script>

<div class="container">
    <form action="/jobs/<%= job.id%>?_method=PUT" method=POST>
        <div class="container" style="margin-top: 6rem">
            <h4>Edit:  Job Type: <%=job.ToJob%> at <%=job.city%>, <%=job.state%></h4>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputTypeofJob">Type of Job</label>
                    <select required id="inputTypeofJob" class="form-control" name="job[ToJob]">
                        <option value="<%=job.ToJob%>" selected="selected" disabled="disabled">-- select one --</option>
                        <optgroup label="Healthcare Practitioners and Technical Occupations:">
                          <option value="Chiropractor">-  Chiropractor</option>
                          <option value="Dentist">-  Dentist</option>
                          <option value="Dietitian">-  Dietitian</option>
                          <option value="Physician">-  Physician</option>
                          <option value="Physician Assistan">-  Physician Assistant</option>
                          <option value="Therapist">-  Therapist</option>
                          <option value="Veterinarian">-  Veterinarian</option>
                          <option value="Technician">-  Technician</option>
                        </optgroup>
                        <optgroup label="Healthcare Support Occupations:">
                          <option value="Home Health Aide">-  Home Health Aide</option>
                        </optgroup>
                        <optgroup label="Business, Executive, Management, and Financial Occupations:">
                          <option value="Chief Executive">-  Chief Executive</option>
                          <option value="Operations Manager">-  General and Operations Manager</option>
                          <option value="Sales Manager">-  Sales Manager</option>
                          <option value="Engineering Manager">-  Engineering Manager</option>
                        </optgroup>
                        <optgroup label="Architecture and Engineering Occupations:">
                          <option value="Cartographer">-  Cartographer</option>
                          <option value="Engineer">-  Engineer</option>
                        </optgroup>
                        <optgroup label="Education, Training, and Library Occupations:">
                          <option value="Postsecondary Teacher">-  Postsecondary Teacher (e.g., College Professor)</option>
                          <option value="Primary Teacher">-  Primary Teacher</option>
                        </optgroup>
                        <optgroup label="Other Professional Occupations:">
                          <option value="Computer Specialist">-  Computer Specialist</option>
                          <option value="Social Worker">-  Social Worker</option>
                          <option value="Counselor">-  Counselor</option>
                          <option value="Lawyer">-  Lawyer</option>
                        </optgroup>
                        <optgroup label="Office and Administrative Support Occupations:">
                          <option value="Supervisor of Administrative Support Workers">-  Supervisor of Administrative Support Workers</option>
                          <option value="Financial Clerk">-  Financial Clerk</option>
                        </optgroup>
                        <optgroup label="Services Occupations:">
                          <option value="Chef">-  Chef</option>
                          <option value="Sales Representative">-  Sales Representative</option>
                        </optgroup>
                        <optgroup label="Agriculture, Maintenance, Repair, and Skilled Crafts Occupations:">
                          <option value="Construction and Extraction">-  Construction and Extraction (e.g., Construction Laborer, Electrician)</option>
                          <option value="Farming, Fishing, and Forestry">-  Farming, Fishing, and Forestry</option>
                          <option value="Installation, Maintenance, and Repair">-  Installation, Maintenance, and Repair</option>
                          <option value="Production Occupations">-  Production Occupations</option>
                        </optgroup>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="vacancy">Vacancies</label>
                    <input required type="number" class="form-control" name="job[vacancy]" id="inputvac" placeholder="Vacancies" value="<%=job.vacancy%>">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputqual">Qualificaiton Required <i class="fa fa-plus" aria-hidden="true"></i></label>
                    <select required id="inputqual" class="form-control" name="qual">
                        <option value="<%=job.qual[0]%>" selected="selected" disabled="disabled">-- select one --</option>
                        <option value="No formal education">No formal education</option>
                        <option value="Primary education">Primary education</option>
                        <option value="Secondary education">Secondary education or high school</option>
                        <option value="General Education Diploma">General Education Diploma</option>
                        <option value="Vocational qualification">Vocational qualification</option>
                        <option value="Bachelor's degree">Bachelor's degree</option>
                        <option value="Master's degree">Master's degree</option>
                        <option value="Doctorate or higher">Doctorate or higher</option>
                    </select>
                </div>
            </div>
            <div class="form row">
                <div class="form-group col-md-6">
                    <label for="inputstateofJob">State</label>
                    <select onchange="print_city('state', this.selectedIndex);" id="sts" class="form-control" name="job[state]" required value="<%=job.state%>" ></select>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCityofJob">City</label>
                    <select id ="state" class="form-control" name="job[city]" required value="<%=job.city%>" ></select>
                    <script language="javascript">print_state("sts");</script>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputSalary">Salary Per Annum</label>
                    <input required type="text" class="form-control" name="job[salary]" id="inputsal"value="<%=job.salary%>">
                </div>
                <div class="form-group col-md-6">
                    <lable for="inputlast">Last Date to Apply</lable>
                    <input required type="date" class="form-control" name="job[lastApply]" id="inputDate" value="<%=job.lastApply%>">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="PhoneNumber">Phone Number</label>
                    <input required type="text" class="form-control" name="job[contact]" value="<%=job.contact%>">
                </div>
                <div class="form-group col-md-6">
                    <label for="mail">Mail</label>
                    <input required type="email" class="form-control" name="job[mail]" value="<%=job.mail%>">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputTitle">Title of the Job</label>
                    <input  required type="text" class="form-control" name="job[title]" value="<%=job.title%>">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputAbout">Description of the Job</label>
                    <input required type="text" class="form-control" name="job[about]" value="<%=job.about%>">
                </div>
                <div class="form-group col-md-12">
                    <label>Information about the Job:</label>
                    <textarea required rows="6" class="form-control" type="text" name="job[description]"  placeholder="Write Something important here....."><%=job.description%></textarea>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success" style="margin:auto; display: block; width: 30%">Submit!</button>
    </form>
    <hr style="border: 0;border-bottom: 1px dashed #ccc; background: #999;">
</div>

<%- include("../partials/footer"); -%>