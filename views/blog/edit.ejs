<%- include("../partials/header"); -%>

<div class="container">
        <h1 class="text-center" style="margin-top: 5rem">Edit <%=blog.title%></h1>
        <div style="width:80%; margin:2rem auto;">
            <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
                <div class="row">
                    <div class="col-md-5 form-group required">
                        <input class="form-control" type="text" name="blog[title]" value="<%=blog.title%>">
                    </div>
                    <div class="col-md-5 form-group required">
                        <input class="form-control" type="text" name="blog[image]"  value="<%=blog.image%>">
                    </div>
                    <div class="form-group col-md-2">
                        <select id="inputGenre" class="form-control" name="blog[genre]">
                          <option selected><i><%=blog.genre%></i></option>
                          <option value="Technology">Technology</option>
                          <option value="Entertainment">Entertainment</option>
                          <option value="Food">Food</option>
                        </select>
                    </div>
                </div>
                <div class="form-group required">
                    <textarea rows="6" class="form-control" type="text" name="blog[description]"  placeholder="Write something interesting here....."><%=blog.description%></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success btn-lg btn-block" style="width:30%; margin:auto">Submit!</button>
                </div>
            </form>
            <a href="/blogs" class="btn btn-warning btn-xs">Go Back</a>
        </div>
</div>

<%- include("../partials/footer"); -%>