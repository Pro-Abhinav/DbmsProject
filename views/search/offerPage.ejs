<%- include("../partials/header"); -%>

<script src="/jsFiles/cities.js"></script>

<div class="container">
    <form action="/offerPage/<%= user.id%>" method=POST>
        <div class="container" style="margin-top: 4rem">
            <p><strong>Offer Job as <%=user.firstName%> <%=user.lastName%> under <%=emp[0].companyName %></strong></p>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputTypeofJob">Type of Job</label>
                    <select required id="inputTypeofJob" class="form-control" name="ToJob">
                        <option selected>Choose...</option>
                        <option value="frontenddev">Front End Developer</option>
                    </select>
                </div>
                <div class="form-group col-md-6">
                    <label for="vacancy">Vacancies</label>
                    <input required type="number" class="form-control" name="vacancy" id="inputvac" placeholder="Vacancies">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputqual">Qualificaiton Required <i class="fa fa-plus" aria-hidden="true"></i></label>
                    <select required id="inputqual" class="form-control" name="qual">
                        <option selected>Choose...</option>
                        <option value="btech">B.Tech</option>
                    </select>
                </div>
            </div>
            <div class="form row">
                <div class="form-group col-md-6">
                    <label for="inputstateofJob">State</label>
                    <select onchange="print_city('state', this.selectedIndex);" id="sts" class="form-control" required ></select>
                </div>
                <div class="form-group col-md-6">
                    <label for="inputCityofJob">City</label>
                    <select id ="state" class="form-control" name="loc" required ></select>
                    <script language="javascript">print_state("sts");</script>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputSalary">Salary Per Annum</label>
                    <input required type="text" class="form-control" name="salary" id="inputsal" placeholder="e.g. 10 lakh, 1 crore">
                </div>
                <div class="form-group col-md-6">
                    <lable for="inputlast">Last Date to Apply</lable>
                    <input required type="date" class="form-control" name="lastApply" id="inputDate">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="PhoneNumber">Phone Number</label>
                    <input required type="text" class="form-control" name="contact" placeholder="Contact Number">
                </div>
                <div class="form-group col-md-6">
                    <label for="mail">Mail</label>
                    <input required type="email" class="form-control" name="mail" placeholder="Owner@example.com">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputTitle">Title of the Job</label>
                    <input  required type="text" class="form-control" name="title" placeholder="Job Name">
                </div>
                <div class="form-group col-md-6">
                    <label for="inputAbout">Descrition of the Job</label>
                    <input required type="text" class="form-control" name="about" placeholder="Descrition (max 1 or 2 lines)">
                </div>
                <div class="form-group col-md-12">
                    <label>Information about the Job:</label>
                    <textarea required rows="6" class="form-control" type="text" name="description" placeholder="Write here....."></textarea>
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success" style="margin:auto; display: block; width: 30%">Submit!</button>
    </form>
    <hr style="border: 0;border-bottom: 1px dashed #ccc; background: #999;">
</div>

<%- include("../partials/footer"); -%>