<%- include("../partials/header"); -%>

<div class="container">
    <form action="/offerPage/<%= user.id%>" method=POST>
        <div class="container" style="margin-top: 4rem">
            <p><strong>Offer Job as <%=user.firstName%> <%=user.lastName%> under <%=emp[0].companyName %></strong></p>
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="inputTypeofJob">Type of Job</label>
                    <select id="inputTypeofJob" class="form-control" name="ToJob">
                        <option selected>Choose...</option>
                        <option value="frontenddev">Front End Developer</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="inputLocofJob">Location of Job</label>
                    <select id="inputLocation" class="form-control" name="loc">
                        <option selected>Choose...</option>
                        <option value="kanpur">Kanpur</option>
                    </select>
                </div>
                <div class="form-group col-md-4">
                    <label for="vacancy">Vacancies</label>
                    <input type="number" class="form-control" name="vacancy" id="inputvac" placeholder="Vacancies">
                </div>
                <div class="form-group col-md-4">
                    <label for="inputqual">Qualificaiton Required <i class="fa fa-plus" aria-hidden="true"></i></label>
                    <select id="inputqual" class="form-control" name="qual">
                        <option selected>Choose...</option>
                        <option value="kanpur">B.Tech</option>
                    </select>
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="inputSalary">Salary Per Annum</label>
                    <input type="text" class="form-control" name="salary" id="inputsal" placeholder="e.g. 10 lakh, 1 crore">
                </div>
                <div class="form-group col-md-6">
                    <lable for="inputlast">Last Date to Apply</lable>
                    <input type="date" class="form-control" name="lastApply" id="inputDate">
                </div>
            </div>
            <div class="form-row">
                <div class="form-group col-md-6">
                    <label for="PhoneNumber">Phone Number</label>
                    <input type="text" class="form-control" name="contact" placeholder="Contact Number">
                </div>
                <div class="form-group col-md-6">
                    <label for="mail">Mail</label>
                    <input type="email" class="form-control" name="mail" placeholder="Owner@example.com">
                </div>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success" style="margin:auto; display: block; width: 30%">Submit!</button>
    </form>
    <hr style="border: 0;border-bottom: 1px dashed #ccc; background: #999;">
</div>