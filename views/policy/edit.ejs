<%- include("../partials/header"); -%>

<div class="container" style="margin-top: 6rem">
    <h1>    </h1>
    <form action="/policy/<%=policy._id%>?_method=PUT" method="POST">
        <div class="form-row">
            <div class="form-group col-md-6">
                <input class="form-control" type="text" name="policy[relTo]" value="<%= policy.relTo%>">
            </div>
            <div class="form-group col-md-6">
                <input class="form-control"  type="text" name="policy[polHead]" value="<%= policy.polHead%>">
            </div>
            <div class="form-group col-md-12">
                <textarea required rows="15" class="form-control" type="text" name="policy[polDesc]"><%= policy.polDesc%></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success" style="margin:auto; display: block; width: 30%">Submit!</button>
    </form>
</div>


