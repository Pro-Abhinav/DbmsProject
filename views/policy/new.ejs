<%- include("../partials/header"); -%>

<div class="container" style="margin-top: 6rem">
    <h1 class="text-center" style="margin-top: 5rem">Post a new policy</h1>
    <form action="/policy" method="POST">
        <div class="form-row"  style="margin-top: 2rem">
            <div class="col-md-6 form-group ">
                <input class="form-control" type="text" name="relTo" placeholder="Related to (i.e. Employers, Workers, students, etc.)">
            </div>
            <div class="form-group col-md-6">
                <input class="form-control"  type="text" name="polHead" placeholder="Title of the policy">
            </div>
            <div class="form-group col-md-12">
                <textarea required rows="15" class="form-control" type="text" name="polDesc"  placeholder="Write policy here.."></textarea>
            </div>
        </div>
        <button type="submit" class="btn btn-outline-success" style="margin:auto; display: block; width: 30%">Submit!</button>
    </form>
</div>


<%- include("../partials/footer"); -%>