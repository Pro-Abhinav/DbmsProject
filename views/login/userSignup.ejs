<script type="text/javascript">
  function checkAdmin(val)
  {
      if(val==="admin")
         document.getElementById('role').style.display='block';
      else
         document.getElementById('role').style.display='none'; 
  }
  
  function checkG(val)
  {
    if(val==="GradTrue")
      document.getElementById('inputGrad').style.display='block';
    else if(val==="GradFalse")
      document.getElementById('inputGrad').style.display='none';
  }
  function checkPG(val)
  {
    if(val==="PGradTrue")
      document.getElementById('inputPGrad').style.display='block';
    else if(val==="PGradFalse")
      document.getElementById('inputPGrad').style.display='none';
  }
</script>



